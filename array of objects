// The studentArray contains seven memory spaces each of size 
 //of student class in which the address of seven Student objects can be stored.
//The Student objects have to be instantiated using the constructor of the
// Student class and their references should be assigned to the array elements in the following way.


package array;
 class Student{
	 public int rollno;
	 public String name;
	 Student(String stname,int stroll){
		 this.name = stname;
		 this.rollno = stroll;
	 }
 }
public class ArrayMain {

	public static void main(String[] args) {
		Student[] arr;
		arr = new Student[5];
		arr[0] = new Student("rohit" , 27);
		arr[1] = new Student("rahul" , 67);
		arr[2] = new Student("sakshi" , 37);
		arr[3] = new Student("rohit kumar" , 47);
		 for (int i = 0; i < arr.length; i++) 
	            System.out.println("Element at " + i + " : " +  arr[i].rollno +" "+ arr[i].name);
		
	}

}
